{
    "name": "crane-breaker",
    "version": "1.0.0",
    "description": "Brick breaker game with face-api.js",
    "main": "index.js",
    "scripts": {
        "start": "electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder"
    },
    "build": {
        "appId": "crane-breaker",
        "directories": {
            "buildResources": "img",
            "output": "release"
        },
        "extraFiles": [
            {
                "from": "./img",
                "to": "./resources/img",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "dmg": {
            "contents": [
                {
                    "x": 110,
                    "y": 150
                },
                {
                    "x": 240,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        },
        "linux": {
            "target": [
                "deb",
                "rpm",
                "snap",
                "AppImage"
            ]
        },
        "win": {
            "target": "NSIS",
            "icon": "img/icons/icon.ico"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Astruum0/CRANE-BREAKER.git"
    },
    "keywords": [
        "BRICK",
        "BREAKER"
    ],
    "author": "Arthur VELLA, Romain RANAIVOSON",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Astruum0/CRANE-BREAKER/issues"
    },
    "homepage": "https://github.com/Astruum0/CRANE-BREAKER#readme",
    "dependencies": {
        "@tensorflow/tfjs": "^3.6.0",
        "@tensorflow/tfjs-node": "^3.3.0",
        "bcrypt": "^5.0.1",
        "electron-packager": "^15.2.0",
        "electron-store": "^8.0.0",
        "face-api.js": "^0.22.2",
        "mysql": "^2.18.1",
        "node-gyp": "^8.0.0",
        "point-in-polygon": "^1.1.0"
    },
    "devDependencies": {
        "electron": "^12.0.2",
        "electron-builder": "^22.10.5"
    }
}